{
    "openapi": "3.0.0",
    "info": {
        "title": "NFT Payroll API",
        "description": "Şirket, çalışan ve bordro NFT süreçlerini yöneten API.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api",
            "description": "Laravel API base path"
        }
    ],
    "paths": {
        "/health": {
            "get": {
                "tags": [
                    "System"
                ],
                "summary": "API sağlık kontrolü",
                "operationId": "f61155bb79c2aee073a51da9ac7bcb29",
                "responses": {
                    "200": {
                        "description": "Sağlıklı durum",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "ok"
                                        },
                                        "abi_exists": {
                                            "type": "boolean",
                                            "example": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Yeni kullanıcı kaydı",
                "operationId": "1817c3f36f9152f04b57256fd84d155f",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Veysel"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "admin@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "secret123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Kayıt başarılı",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Giriş yap",
                "operationId": "9a5f0387b5e16c7fc63ef766b8c182ba",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "admin@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "secret123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Giriş başarılı",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/me": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Giriş yapan kullanıcı",
                "operationId": "04d832c732085d4d77b0760e31d879f8",
                "responses": {
                    "200": {
                        "description": "Kullanıcı bilgisi",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Mevcut token ile çıkış",
                "operationId": "b56281ad981a217bf353a26d903b01b4",
                "responses": {
                    "200": {
                        "description": "Çıkış başarılı",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Çıkış yapıldı"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/companies": {
            "get": {
                "tags": [
                    "Companies"
                ],
                "summary": "Kullanıcının şirketlerini listele",
                "operationId": "0721fa4172e9d6d1b5b955e04ccba98b",
                "responses": {
                    "200": {
                        "description": "Şirket listesi",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Company"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Companies"
                ],
                "summary": "Şirket oluştur",
                "operationId": "f65f0b62a57512b5327141aaf137407b",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Acme Inc."
                                    },
                                    "type": {
                                        "type": "string",
                                        "example": "LLC",
                                        "nullable": true
                                    },
                                    "tax_number": {
                                        "type": "string",
                                        "example": "1234567890",
                                        "nullable": true
                                    },
                                    "country": {
                                        "type": "string",
                                        "example": "TR",
                                        "nullable": true
                                    },
                                    "city": {
                                        "type": "string",
                                        "example": "Istanbul",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Şirket oluşturuldu",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Company"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "required": [
                    "id",
                    "name",
                    "email"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Veysel"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "admin@example.com"
                    },
                    "role": {
                        "type": "string",
                        "example": "owner"
                    }
                },
                "type": "object"
            },
            "AuthResponse": {
                "required": [
                    "user",
                    "token"
                ],
                "properties": {
                    "user": {
                        "$ref": "#/components/schemas/User"
                    },
                    "token": {
                        "type": "string",
                        "example": "1|abcdef..."
                    }
                },
                "type": "object"
            },
            "Company": {
                "required": [
                    "id",
                    "name",
                    "owner_id"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "owner_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Acme Inc."
                    },
                    "type": {
                        "type": "string",
                        "example": "LLC",
                        "nullable": true
                    },
                    "tax_number": {
                        "type": "string",
                        "example": "1234567890",
                        "nullable": true
                    },
                    "country": {
                        "type": "string",
                        "example": "TR",
                        "nullable": true
                    },
                    "city": {
                        "type": "string",
                        "example": "Istanbul",
                        "nullable": true
                    },
                    "address": {
                        "type": "string",
                        "example": "Levent",
                        "nullable": true
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "http",
                "description": "Authorization: Bearer {token}",
                "bearerFormat": "Token",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "System",
            "description": "Sistem uçları"
        },
        {
            "name": "Auth",
            "description": "Kimlik doğrulama"
        },
        {
            "name": "Companies",
            "description": "Şirket yönetimi"
        }
    ]
}